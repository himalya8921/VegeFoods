@model List<VegeFoodsEntities.Entities.Products>

@{
    var PageNo = ViewBag.PageNumber;
    var totalPages = ViewBag.TotalPages;
}

    <img src="~/images/bg_1.jpg" height="500" width="1400" />

    <section class="ftco-section">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-6 col-lg-3">
                        <div class="product">

                            <a href="product-single.html" class="img-prod automation-products-list-item">
                                <a class="img-prod automation-products-list-item" asp-controller="Home" asp-action="ProductSingle" asp-route-productId="@item.ProductId">
                                    <img class="img-fluid" src="@("~/ProductImage/"+@item.ProductImage)" asp-append-version="true" width="250" height="250" />
                                    <div class="overlay"></div>
                                </a>
                            </a>
                            <div class="text py-3 pb-4 px-3 text-center">
                                <h3><a href="product-single.html" class="automation-products-list-item-title">@item.ProductName</a></h3>
                                <div class="d-flex">
                                    <div class="pricing">
                                        <p class="price"><span class="mr-2 price-dc">$120</span><span class="price-sale">$@item.ProductPrice</span></p>
                                    </div>
                                </div>
                                <div class="bottom-area d-flex px-3">
                                    <div class="m-auto d-flex">

                                        @Html.ActionLink("", "ProductSingle", new { id = item.ProductId }, new { @class = "add-to-cart d-flex justify-content-center align-items-center text-center ion-ios-menu" })
                                        @Html.ActionLink("", "AddToWishlist", new { id = item.ProductId }, new { @class = "heart d-flex justify-content-center align-items-center automation-add-product-item-to-wishlist ion-ios-heart" })
                                        @Html.ActionLink("", "AddToCart", new { productId = item.ProductId, quantity = 1, price = item.ProductPrice }, new { @class = "heart d-flex justify-content-center align-items-center automation-add-product-item-to-wishlist ion-ios-cart" })

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="row mt-5">
                <div class="col " style="text-align:center">
                    <div class="block-27">
                        @{
                            <ul class="pagination d">
                                @if (PageNo == 1)
                                {
                                    <li class="disabled p-2">
                                        @Html.ActionLink("<", "Shop", new { PageNumber = PageNo  }, new { onclick ="javascript:return false;" })
                                    </li>
                                }
                                else
                                {
                                    <li class="p-2">
                                        @Html.ActionLink("<", "Shop", new { PageNumber = PageNo - 1 })
                                    </li>
                                }
                                @for (int i = 1; i <= totalPages; i++)
                                {
                                    if (i == PageNo)  // to show active page number-- Not working RN
                                    {
                                        <li class="active p-2">
                                            @Html.ActionLink(i.ToString(), "Shop", new { PageNumber = i })
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="p-2">
                                            @Html.ActionLink(i.ToString(), "Shop", new { PageNumber = i })
                                        </li>
                                    }
                                }
                                @if (PageNo == totalPages)
                                {
                            <li class="disabled p-2">
                                @Html.ActionLink(">", "Shop", new { PageNumber = PageNo }, new { onclick = "javascript:return false;" })
                            </li>
                                }
                                else
                                {
                                    <li class="p-2">
                                        @Html.ActionLink(">", "Shop", new { PageNumber = PageNo + 1 })
                                    </li>
                                }
                            </ul>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="ftco-section ftco-no-pt ftco-no-pb py-5 bg-light">
        <div class="container py-4">
            <div class="row d-flex justify-content-center py-5">
                <div class="col-md-6">
                    <h2 style="font-size: 22px;" class="mb-0">Subcribe to our Newsletter</h2>
                    <span>Get e-mail updates about our latest shops and special offers</span>
                </div>
                <div class="col-md-6 d-flex align-items-center">
                    <form action="#" class="subscribe-form">
                        <div class="form-group d-flex">
                            <input type="text" class="form-control" placeholder="Enter email address">
                            <input type="submit" value="Subscribe" class="submit px-3">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>




    <!-- loader -->
    <div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" /></svg></div>


