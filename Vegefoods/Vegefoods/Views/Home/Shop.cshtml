    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-10 mb-5 text-center">
                    <ul class="product-category">
                        <li><a href="#" class="active">All</a></li>
                        <li><a href="#">Vegetables</a></li>
                        <li><a href="#">Fruits</a></li>
                        <li><a href="#">Juice</a></li>
                        <li><a href="#">Dried</a></li>
                    </ul>
                </div>
            </div>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-6 col-lg-3">
                        <div class="product">


                            @*@Html.ActionLink("Home", "ProductSingle", new { productId = item.ProductId}, new { @class = "img-prod automation-products-list-item" })*@


                            <a href="product-single.html" class="img-prod automation-products-list-item">
                                <a class="img-prod automation-products-list-item" asp-controller="Home" asp-action="ProductSingle" asp-route-productId="@item.ProductId">
                                    @* <img class="img-fluid" src="@Html.Raw(item.ProductImage)" alt="Colorlib Template">*@
                                    <img class="img-fluid" src="@("~/ProductImage/"+@item.ProductImage)" asp-append-version="true" width="250px" height="250px" />
                                    <span class="status">30%</span>
                                    <div class="overlay"></div>
                                </a>
                            </a>
                            <div class="text py-3 pb-4 px-3 text-center">
                                <h3><a href="product-single.html" class="automation-products-list-item-title">@item.ProductName</a></h3>
                                <div class="d-flex">
                                    <div class="pricing">
                                        <p class="price"><span class="mr-2 price-dc">$120</span><span class="price-sale">$@item.ProductPrice</span></p>
                                    </div>
                                </div>
                                <div class="bottom-area d-flex px-3">
                                    <div class="m-auto d-flex">
                                        <a href="#" class="add-to-cart d-flex justify-content-center align-items-center text-center">
                                            <span><i class="ion-ios-menu"></i></span>
                                        </a>


                                        @Html.ActionLink("", "AddToWishlist", new { id = item.ProductId }, new { @class = "heart d-flex justify-content-center align-items-center automation-add-product-item-to-wishlist ion-ios-heart" })
                                        @Html.ActionLink("", "AddToCart", new { productId = item.ProductId, quantity = 1, price = item.ProductPrice }, new { @class = "heart d-flex justify-content-center align-items-center automation-add-product-item-to-wishlist ion-ios-cart" })

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="row mt-5">
                <div class="col " style="text-align:center">
                    <div class="block-27">
                        @{
                            <ul class="pagination d">
                                @if (PageNo == 1)
                                {
                                    <li class="disabled p-2">
                                        @Html.ActionLink("<", "Shop", new { PageNumber = PageNo })
                                    </li>
                                }
                                else
                                {
                                    <li class="p-2">
                                        @Html.ActionLink("<", "Shop", new { PageNumber = PageNo - 1 })
                                    </li>
                                }
                                @for (int i = 1; i <= totalPages; i++)
                                {
                                    if (i == PageNo)  // to show active page number-- Not working RN
                                    {
                                        <li class="active p-2">
                                            @Html.ActionLink(i.ToString(), "Shop", new { PageNumber = i })
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="p-2">
                                            @Html.ActionLink(i.ToString(), "Shop", new { PageNumber = i })
                                        </li>
                                    }
                                }
                                @if (PageNo == totalPages)
                                {
                                    <li class="disabled p-2">
                                        @Html.ActionLink(">", "Shop", new { PageNumber = PageNo })
                                    </li>
                                }
                                else
                                {
                                    <li class="p-2">
                                        @Html.ActionLink(">", "Shop", new { PageNumber = PageNo + 1 })
                                    </li>
                                }
                            </ul>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

